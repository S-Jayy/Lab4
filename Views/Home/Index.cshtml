@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-top: 100px;
        }

        .top-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
        }

            .top-section img {
                max-width: 50%;
            }

            .top-section .text {
                flex-grow: 1;
                padding-left: 20px;
                font-size: 2rem;
            }

        .bottom-section {
            text-align: center;
            margin-top: 40px;
        }

            .bottom-section .icon {
                display: inline-block;
                margin: 20px;
            }

        .icon i {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 10px; 
        }

        .icon a {
            text-decoration: none;
            color: #333;
            display: block;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="top-section">
            <img src="https://seranking.com/blog/wp-content/uploads/2021/01/image.jpeg" alt="Image" />
            <div class="text">
                <i class="fas fa-home"></i> ENTJAVA
            </div>
        </div>
        <div class="bottom-section">
            <div class="icon">
                <i class="fas fa-calendar-alt"></i>
                <a href="#">Attendance</a>
            </div>
            <div class="icon">
                <i class="fas fa-user-plus"></i>
                <a href="#">Registration</a>
            </div>
            <div class="icon">
                <i class="fas fa-book"></i>
                <a href="#">Visitor Log</a>
            </div>
        </div>
    </div>
</body>
</html>
